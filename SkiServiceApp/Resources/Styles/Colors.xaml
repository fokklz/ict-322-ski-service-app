    <SolidColorBrush x:Key="NormalBrush">
        <SolidColorBrush.Color>
            <AppThemeBinding Dark="{StaticResource OffWhite}" Light="{StaticResource OffBlack}" />
        </SolidColorBrush.Color>
    </SolidColorBrush>


    <SolidColorBrush x:Key="Primary">
        <SolidColorBrush.Color>
            <AppThemeBinding Dark="{StaticResource Blue400}" Light="{StaticResource Indigo400}" />
        </SolidColorBrush.Color>
    </SolidColorBrush>

    <SolidColorBrush x:Key="Secondary">
        <SolidColorBrush.Color>
            <AppThemeBinding Dark="{StaticResource Blue400}" Light="{StaticResource Indigo400}" />
        </SolidColorBrush.Color>
    </SolidColorBrush>
