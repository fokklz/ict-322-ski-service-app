<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="Transparent">Transparent</Color>
    
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="OffWhite">#FAFAFA</Color>
    <Color x:Key="OffBlack">#212121</Color>
    <Color x:Key="OffWhite30">#4DFAFAFA</Color>
    <Color x:Key="OffBlack30">#4D212121</Color>

    <Color x:Key="SemiTransparentOffBlack">#99212121</Color>


    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}" />
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}" />

    <Color x:Key="Gray500">#6E6E6E</Color>


    <!-- Error Colors for light/dark-->
    <Color x:Key="Red">#EF5350</Color>
    <Color x:Key="RedAccent">#660000</Color>
    <Color x:Key="RedDark">#660000</Color>
    <Color x:Key="RedDarkAccent">#400000</Color>
        <!-- Text counter parts -->
    <Color x:Key="RedText">#FAFAFA</Color>
    <Color x:Key="RedDarkText">#FAFAFA</Color>
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource Red}" />
    <SolidColorBrush x:Key="RedDarkBrush" Color="{StaticResource RedDark}" />

