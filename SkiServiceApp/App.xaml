<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SkiServiceApp"
             xmlns:common="clr-namespace:SkiServiceApp.Common"
             x:Class="SkiServiceApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <common:Localization x:Key="localization" />
            <Style x:Key="DialogHeading" TargetType="Label">
                <Setter Property="FontSize" Value="25" />
            </Style>
            <Style x:Key="DialogText" TargetType="Label">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="LineBreakMode" Value="WordWrap" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
