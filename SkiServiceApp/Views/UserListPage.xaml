<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:SkiServiceApp.Components;assembly=SkiServiceApp"
             xmlns:viewModels="clr-namespace:SkiServiceApp.ViewModels;assembly=SkiServiceApp"
             x:Class="SkiServiceApp.Views.UserListPage"
             Title="UserListPage">

    <CollectionView ItemsSource="{Binding Items}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <components:CustomListItem PriorityService="{Binding PriorityService}"
                                           RemainingDaysAssignment="{Binding RemainingDaysAssignment}"
                                           AssignCommand="{Binding AssignCommand}"
                                           Id="{Binding Id}" />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>