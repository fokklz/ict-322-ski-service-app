<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkiServiceApp.Views.SettingsPage"
             Title="SettingsPage">

    <Grid Padding="20" HorizontalOptions="Center" VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Settings Controls im oberen Bereich des Grids -->
        <StackLayout Grid.Row="0" WidthRequest="300">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Text="Theme" Grid.Row="0" Grid.Column="0" VerticalOptions="Center"/>
                <Picker Grid.Row="0" Grid.Column="1"
                        Title="Theme"
                        ItemsSource="{Binding Themes}"
                        SelectedItem="{Binding SelectedTheme}"
                        HorizontalOptions="FillAndExpand" />

                <Label Text="Stornieren in Listen Ansicht" Grid.Row="1" Grid.Column="0" VerticalOptions="Center"/>
                <Switch IsToggled="{Binding CancelInListView}" Grid.Row="1" Grid.Column="1" VerticalOptions="Center"/>

                <Label Text="Login immer speichern" Grid.Row="2" Grid.Column="0" VerticalOptions="Center"/>
                <Switch IsToggled="{Binding AlwaysSaveLogin}" Grid.Row="2" Grid.Column="1" VerticalOptions="Center"/>

                <Label Text="Bei Logout fragen (speichern)" Grid.Row="3" Grid.Column="0" VerticalOptions="Center"/>
                <Switch IsToggled="{Binding AskBeforeLogout}" Grid.Row="3" Grid.Column="1" VerticalOptions="Center"/>
            </Grid>
        </StackLayout>

        <!-- Logout Button im unteren Bereich des Grids -->
        <Button Text="Logout on All Devices"
                Command="{Binding LogoutOnAllDevicesCommand}"
                Grid.Row="1"
                HorizontalOptions="Center"
                VerticalOptions="End"
                Margin="0,0,0,20"
                WidthRequest="280" />
    </Grid>
</ContentPage>
