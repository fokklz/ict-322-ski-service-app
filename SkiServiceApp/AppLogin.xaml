<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkiServiceApp.AppLogin"
             Title="AppLogin">
    <VerticalStackLayout Margin="15">
        <Entry Text="{Binding Username, Mode=TwoWay}" Placeholder="Username"/>
        <Entry Text="{Binding Password, Mode=TwoWay}" Placeholder="Password" IsPassword="True"/>
        <Button Command="{Binding LoginCommand}" Text="Login"/>
        <Label Text="{Binding Message}" IsVisible="{Binding IsErrorVisible}"  TextColor="Red"/>
    </VerticalStackLayout>
</ContentPage>